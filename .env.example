# =============================================================================
# MVP Inspeção Sanitária - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------
SECRET_KEY=your-ultra-secret-key-here-change-in-production
FLASK_DEBUG=false

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL/Neon)
# -----------------------------------------------------------------------------
# Format: postgresql://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql://user:pass@ep-xxx.aws.neon.tech/neondb?sslmode=require

# Connection Pool Settings (optional - defaults shown)
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=3
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# -----------------------------------------------------------------------------
# Google Cloud Platform
# -----------------------------------------------------------------------------
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCP_STORAGE_BUCKET=your-bucket-name

# Google Drive Folder IDs
FOLDER_ID_01_ENTRADA_RELATORIOS=folder-id-for-incoming-reports
FOLDER_ID_02_PLANOS_GERADOS=folder-id-for-generated-plans
FOLDER_ID_03_PROCESSADOS_BACKUP=folder-id-for-processed-backups
FOLDER_ID_99_ERROS=folder-id-for-errors

# Service Account (JSON string or file path)
GCP_SA_KEY={}

# OAuth Token (JSON string)
GCP_OAUTH_TOKEN={"refresh_token": "your-token-here"}

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# -----------------------------------------------------------------------------
# WhatsApp Business API (optional)
# -----------------------------------------------------------------------------
WHATSAPP_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-id
WHATSAPP_DESTINATION_PHONE=5511999998888

# -----------------------------------------------------------------------------
# Email Configuration (optional)
# -----------------------------------------------------------------------------
# Email service uses lazy configuration from the database

# -----------------------------------------------------------------------------
# Production Environment (Cloud Run auto-sets these)
# -----------------------------------------------------------------------------
# K_SERVICE=your-service-name  # Auto-set by Cloud Run
# PORT=8080                    # Auto-set by Cloud Run
# APP_PUBLIC_URL=https://your-app.run.app  # For webhooks
